<div class="container">

  <% if @message == "missing" %>
    <h3 class="text-center">You need to complete your profile first</h3>
  <% else %>
    <h3 class="text-center">You profile is complete!!!!</h3>
  <% end %>
</div>
<br><br>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <% if @message == "complete" %>

    <p class="text-center"><b>Now you can make a requisition</b></p>

    <div class="text-center">
      <%= link_to "Create", new_requisition_path, class: "button" %>
    </div>

  <% end %>
</div>

<div class="container">
  <% if @requisition.exists? %>
    <table class="table table-striped">
      <thead>
        <th>ID</th>
        <th>Requested amount</th>
        <th>Payment terms</th>
      </thead>
      <tbody>
        <% @requisition.each do |r| %>
          <tr>
            <td><%= r.id %></td>
            <td><%= r.requested_amount %></td>
            <td><%= r.payment_terms %> meses</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

</div>
